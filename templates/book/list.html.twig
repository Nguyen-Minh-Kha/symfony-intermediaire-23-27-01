{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <h1>Liste des livres </h1>
    <nav>
    <a href="{{ path('app_book_create') }}"> Ajouter un livre</a>
    </nav>

    {% for book in books %}
        <div>
            {% if book.imageUrl %}
             <p>
                {# afin d'afficher une image locale:
                 <img src="{{ asset('images/maze.png') }}" alt="{{ book.title }}" /> 
                 #}
                 <img src="{{ book.imageUrl }}" alt="{{ book.title }}" />
             </p>
            {% endif %}
            <p> {{ book.title }}</p>
            <h3> {{ book.price }} â‚¬ </h3>
            <h3> {{ book.description }}</h3>
            {% if book.author %}
                <p> {{ book.author.name }}</p>
            {% endif %}
            {% if book.publishinghouse %}
                <p> {{ book.publishinghouse.name }}</p>
            {% endif %}
            {% for cat in book.categories %}
                <p> {{ cat.name }}</p>
            {% endfor %}

          
            <a href="{{ path('app_book_remove' , {id: book.id})}}"> Supprimer</a>
            <a href="{{ path('app_book_update' , {id: book.id})}}"> Modifier</a>
            
        </div>
    {% endfor %}
{% endblock %}