{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <h1>Liste des livres </h1>
    <nav>
    <a href="{{ path('app_book_create') }}"> Ajouter un livre</a>
    </nav>

    {% for book in books %}
        <div>
            {% if book.imageUrl %}
             <p>
                <img src="{{ book.imageUrl }}" alt="{{ book.title }}" />
             </p>
            {% endif %}
            <p> {{ book.title }}</p>
            <p> {{ book.author.description }}</p>

          {# ceci est un commentaire
            <a href="{{ path('app_book_remove' , {id: book.id})}}"> Supprimer</a>
            <a href="{{ path('app_book_update' , {id: book.id})}}"> Modifier</a>
            #}
        </div>
    {% endfor %}
{% endblock %}