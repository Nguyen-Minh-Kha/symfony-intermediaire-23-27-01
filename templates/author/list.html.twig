{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
    <h1>Liste des auteurs </h1>
    <nav>
    <a href="{{ path('app_author_create') }}"> Ajouter un auteur</a>
    </nav>

    {% for author in authors %}
        <div>
            {% if author.imageUrl %}
             <p>
                <img src="{{ author.imageUrl }}" alt="{{ author.name }}" />
             </p>
            {% endif %}
            <p> {{ author.name }}</p>

            <a href="{{ path('app_author_remove' , {id: author.id})}}"> Supprimer</a>
            <a href="{{ path('app_author_update' , {id: author.id})}}"> Modifier</a>
        </div>
    {% endfor %}
{% endblock %}