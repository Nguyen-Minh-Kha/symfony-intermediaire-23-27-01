{% extends 'base.html.twig' %}

{% block title %}page d'accueil{% endblock %}

{% block body %}
    <h1> {% block pageTitle %} Nos derniers livres {% endblock %} </h1>
    {% block subTitle %} {% endblock %}
<hr />

    {% for book in books %}
        <div>
            <p> {{ book.title }}</p>
            <p> Prix: {{ book.price }} €</p>
            <p> Dérniére modification {{ book.updatedAt|date('d/m/Y à H:i', 'Europe/Paris') }} </p>
            <p> Catégories: </p>
            <nav>
                {% for cat in book.categories %}
                    <a href="{{ path('app_front_category_display' , {id: cat.id} )}}">{{ cat.name}}</a>
                {% endfor %}
            </nav>
             <p> 
                <a href="{{ path('app_front_basket_add' , {id: book.id} )}}"> Ajouter au panier </a>
             </p>
        </div>
        <hr />
    {% endfor %}

{% endblock %}




